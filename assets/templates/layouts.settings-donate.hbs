{{> ModeBar }}

<div class="mode-context">
    <header class="mode-context-header">
        <ol class="breadcrumbs">
            <li><a href="map.html">{{deployment.name}}</a></li>
            <li><a href="settings.html">Settings</a></li>
        </ol>

        <h1 class="mode-context-title">Donations</h1>
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">

    </div>
</div>

<main role="main">
    <div class="main-col">
        <div class="form-sheet">
            <div class="form-sheet-summary">
                <h2 class="form-sheet-title">Active donation</h2>
            </div>

            <div class="stepper">
                <div class="stepper-item active complete">
                    <h2 class="stepper-heading">
                        <span class="stepper-badge">1</span>
                        Donation Details
                    </h2>

                    <div class="form-field">
                        <label for="donation-title">
                            Donation Title
                        </label>
                            <input id="donation-title" type="text" placeholder="The title of your donation"/>
                    </div>

                     <div class="form-field">
                        <label for="donation-description">
                          Description
                        </label>
                        <textarea id="donation-description" placeholder="This is a placeholder text telling you more about this donation"/>
                    </div>

                    <div class="form-field">
                        <span class="label">Donation images</span>
                        <div class="stepper-images">
                            <div class="stepper-image">
                                <figure>
                                    <img src="../../img/team-photo.jpg" class="postcard-image" alt="Uploaded image" >
                                </figure>

                                <button class="button">
                                    Delete image
                                </button>
                            </div>
                            <div class="stepper-image">
                                <figure >
                                    <img src="../../img/team-photo.jpg" class="postcard-image" alt="Uploaded image" >
                                </figure>
                                
                                <button class="button">
                                    Delete image
                                </button>
                            </div>
                            <div class="stepper-image">
                                <figure >
                                    <img src="../../img/team-photo.jpg" class="postcard-image" alt="Uploaded image" >
                                </figure>
                                
                                <button class="button">
                                    Delete image
                                </button>
                            </div>
                        </div>

                        <div class="form-field">
                            <label for="photo">Attach image</label>
                            <input type="file" id="photo" />
                        </div>
                    </div>
                </div>
            
                <div class="stepper-item">
                    <h2 class="stepper-heading">
                        <span class="stepper-badge">2</span>
                        Wallet Address
                    </h2>
                    <div class="form-field">
                        <label for="donation-wallet">Wallet Address </label>
                        <input id="donation-wallet" type="text" placeholder="$ilp.uphold.com/qdXLkr8xAYrk"/>
                    </div>
                    <div class="form-field">
                        <button class="button">
                            Delete wallet
                        </button>    
                    </div>
                </div>

                <div class="form-field">
                    <label>
                        <input type="checkbox" id="donations-disable">
                        Disable Monetization
                    </label>
                </div>
            </div>            
        </div>
    </div>
</main>

{{> Modals }}
